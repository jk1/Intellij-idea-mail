<idea-plugin version="2">
    <id>intellijSmtpServer</id>
    <name>SMTP server plugin</name>
    <version>0.1-SNAPSHOT</version>
    <vendor url="http://www.yourcompany.com">YourCompany</vendor>

    <description><![CDATA[SMTP server plugin for Intellij Idea]]></description>

    <change-notes><![CDATA[
       <ul>
        <li><b>0.1</b> - initial plugin version</li>
       </ul>
      ]]>
    </change-notes>

    <idea-version since-build="117.105"/>


    <depends>com.intellij.modules.lang</depends>


    <application-components>
        <!-- Add your application components here -->
        <component>
            <implementation-class>github.jk1.smtpidea.components.SmtpServerApplicationComponent</implementation-class>
        </component>
    </application-components>

    <project-components>
        <!-- Add your project components here -->
    </project-components>

    <actions>
        <!-- Add your actions here -->
        <action id="start-server" class="github.jk1.smtpidea.actions.StartServerAction" text="Start server"
                description="start mail server">
            <add-to-group group-id="ToolsMenu" anchor="last"/>
            <keyboard-shortcut keymap="$default" first-keystroke="shift ctrl S"/>
        </action>
        <action id="stop-server-action" class="github.jk1.smtpidea.actions.StopServerAction" text="Stop SMTP server">
            <add-to-group group-id="ToolsMenu" anchor="last"/>
            <keyboard-shortcut keymap="$default" first-keystroke="shift ctrl D"/>
        </action>
    </actions>

    <extensions defaultExtensionNs="com.intellij">
        <toolWindow id="Mail Server" secondary="true" icon="/general/add.png" anchor="right"
                    factoryClass="github.jk1.smtpidea.ui.MailToolWindowFactory"/>
    </extensions>
</idea-plugin>