<idea-plugin version="2">
    <id>intellijSmtpServer</id>
    <name>SMTP server plugin</name>
    <version>0.1-SNAPSHOT</version>
    <vendor url="http://www.yourcompany.com">YourCompany</vendor>

    <description><![CDATA[SMTP server plugin for Intellij Idea]]></description>

    <change-notes><![CDATA[
       <ul>
        <li><b>0.1</b> - initial plugin version</li>
       </ul>
      ]]>
    </change-notes>

    <idea-version since-build="117.105"/>

    <depends>com.intellij.modules.lang</depends>

    <application-components>

    </application-components>

    <project-components>
        <component>
            <implementation-class>github.jk1.smtpidea.components.SmtpServerApplicationComponent</implementation-class>
        </component>
    </project-components>

    <actions>

    </actions>

    <extensions defaultExtensionNs="com.intellij">
        <toolWindow id="Mail Server" secondary="true" icon="/email.png" anchor="bottom"
                    factoryClass="github.jk1.smtpidea.ui.MailToolWindowFactory"/>
        <projectService serviceInterface="github.jk1.smtpidea.server.ConfigurableSmtpServer"
                        serviceImplementation="github.jk1.smtpidea.server.ConfigurableSmtpServerImpl"/>
    </extensions>
</idea-plugin>